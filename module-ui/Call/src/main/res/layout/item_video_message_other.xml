<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="horizontal">

    <com.hjq.shape.layout.ShapeLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:paddingVertical="10dp"
        app:shape_bottomLeftRadius="16dp"
        app:shape_bottomRightRadius="16dp"
        app:shape_solidColor="#4DFDD02B"
        app:shape_topLeftRadius="1dp"
        app:shape_topRightRadius="16dp">

        <TextView
            android:id="@+id/tv_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/translate"
            android:maxWidth="160dp"
            android:textColor="@color/app_text_reverse_color"
            android:textSize="14sp" />

        <View
            android:id="@+id/translate_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_message_translate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@color/translate"
            android:maxWidth="160dp"
            android:textColor="@color/app_text_reverse_color"
            android:textSize="14sp" />

    </com.hjq.shape.layout.ShapeLinearLayout>

    <ImageView
        android:id="@+id/translate_btn"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_call_translate_def" />

</LinearLayout>

