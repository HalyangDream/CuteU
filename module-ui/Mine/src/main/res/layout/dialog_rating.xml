<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_40"
    android:gravity="center">

    <ImageView
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_centerHorizontal="true"
        android:elevation="10dp"
        android:src="@drawable/img_rating_emoji" />

    <com.hjq.shape.layout.ShapeRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="44dp"
        android:paddingBottom="20dp"
        app:shape_radius="16dp"
        app:shape_solidColor="@color/white">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_dialog_right_close_black" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="72dp"
            android:text="@string/str_rating_dialog_title"
            android:textColor="@color/app_text_color"
            android:textSize="18sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/ll_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_rating_1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/ic_rating_grey" />

            <ImageView
                android:id="@+id/iv_rating_2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/ic_rating_grey" />

            <ImageView
                android:id="@+id/iv_rating_3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/ic_rating_grey" />

            <ImageView
                android:id="@+id/iv_rating_4"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/ic_rating_grey" />

            <ImageView
                android:id="@+id/iv_rating_5"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/ic_rating_grey" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_rating_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:text="@string/str_rating_dialog_tip"
            android:textColor="@color/app_text_third_color"
            android:textSize="14sp" />

    </com.hjq.shape.layout.ShapeRelativeLayout>

</RelativeLayout>