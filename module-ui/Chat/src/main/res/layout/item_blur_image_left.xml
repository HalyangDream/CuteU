<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="214dp"
    android:layout_gravity="start"
    android:src="@drawable/img_chat_left_placeholder">


    <ImageView
        android:id="@+id/iv_content"
        android:layout_width="160dp"
        android:layout_height="214dp"
        android:layout_gravity="start"
        android:src="@drawable/img_chat_left_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_vip_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:src="@drawable/ic_strategy_msg_lock"
        app:layout_constraintBottom_toBottomOf="@id/rl_private"
        app:layout_constraintStart_toStartOf="@id/rl_private" />


    <com.hjq.shape.layout.ShapeRelativeLayout
        android:id="@+id/rl_private"
        android:layout_width="104dp"
        android:layout_height="24dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:shape_radius="10dp"
        app:shape_solidColor="@color/white_20">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:text="@string/str_private"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </com.hjq.shape.layout.ShapeRelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


