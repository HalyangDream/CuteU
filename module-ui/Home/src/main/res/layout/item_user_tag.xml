<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/iv_root"
    android:layout_width="wrap_content"
    android:layout_height="32dp"
    android:layout_marginHorizontal="3dp"
    android:layout_marginVertical="6dp"
    android:gravity="center"
    android:paddingHorizontal="12dp"
    app:shape_radius="26dp"
    app:shape_solidColor="#E7FBF4">

    <ImageView
        android:id="@+id/iv_tag_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/app_text_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_tag_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:textColor="@color/app_text_color"
        android:textSize="14sp"
        tools:text="China" />

</com.hjq.shape.layout.ShapeLinearLayout>
